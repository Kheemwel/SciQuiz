<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item>
		<layer-list>
			<item>
				<shape>
					<corners 
						android:radius="3dp" />
					<solid 
						android:color="#99ffab00" />
				</shape>
			</item>
			<item android:bottom="3dp" android:right="1dp" android:left="1dp">
				<shape> 
					<solid
						android:color="@color/amber_A700" />
					<corners 
						android:radius="4dp" />
					<padding 
						android:bottom="10dp" 
						android:left="10dp" 
						android:right="10dp" 
						android:top="10dp" />
				</shape>
			</item>
		</layer-list>
	</item>
</selector>
